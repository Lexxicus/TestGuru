<tr>
  <td>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.category.title %></td>
  <td><%= test.level %></td>
  <td><%= test.questions.count %></td>
  <td>
    <div class="btn-group">
      <%= link_to t('helpers.links.show'),
                  admin_test_path(test),
                  class: 'btn btn-light' %>
      <%= link_to t('helpers.links.edit'),
                  edit_admin_test_url(test),
                  data: { test_id: test.id },
                  class: 'btn btn-light form-inline-link' %>
      <%= link_to t('helpers.links.delete'), 
                  admin_test_path(test),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-light' %>
    </div>
  </td>
</tr>
