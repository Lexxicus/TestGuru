<div class="row justify-content-left mt-3 mb-3">
  <div calss="col col-md-4">
    <div class="card-body">
      <%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
        <%= render 'shared/errors', resource: @answer %>
        <div class="form-group">
          <p>
            <%= form.label :body %>
            <%= form.text_field :body, class: 'form-control'%>
          </p>

          <div class="form-check">
            <%= form.label :correct, calss: 'form-check-label' do %>
              <%= form.check_box :correct, class: 'form-check-input' %>
              Correct
            <% end %>
          </div>

          <div class="form-group">
            <%= form.submit class: 'btn btn-light' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
