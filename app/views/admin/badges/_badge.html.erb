<tbody>
<tr>
  <td class="align-middle"><%= badge.name %></td>
  <td class="align-middle"><%= image_tag("badges/#{badge.image_name}", size: "64x64") %></td>
  <td class="align-middle"><%= badge.condition_value %></td>
  <td>
    <% if badge.users.exists?(current_user.id) %>
      Получен
    <% end %>
  </td>
  <td>
    <div class="btn-group">
      <%= link_to t('helpers.links.edit'),
                  edit_admin_badge_path(badge),
                  class: 'btn btn-light' %>
      <%= link_to t('helpers.links.delete'), 
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'btn btn-light' %>
    </div>
  </td>
</tr>
</tbody>
