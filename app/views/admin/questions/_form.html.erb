<div class="row justify-content-left mt-3">
  <div calss="col col-md-4">
      <div class="card-body">
        <%= form_with model: [:admin, @test, @question], local: true do |form| %>
          <%= render 'shared/errors', resource: @question %>
          <div class="form-group">
            <p>
              <%= form.label :body %>
              <%= form.text_field :body, id: :test_body, class: 'form-control' %>
            </p>
            
            <div class="form-group">
              <p><%= form.submit class: 'btn btn-light' %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
